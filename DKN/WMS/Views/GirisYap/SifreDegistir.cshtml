                    <div class="row">
                        <div class="col-md-12">
                            <center>
                                <button type="submit" id="guncelleBtn" class="btn btn-primary fa fa-edit"> Güncelle </button>
                            </center>
                        </div>
                    </div>

                </div>}
                </div>

            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
@section Scripts
{

    <script type="text/javascript">document.getElementById("yeniSifreTekrarId").addEventListener("keyup", testGirilenDeger);

        function testGirilenDeger() {
            var yeniSifreTekrar = document.getElementById("yeniSifreTekrarId");
            var yeniSifre = document.getElementById("yeniSifreId");
            var eskiSifre = document.getElementById("eskiSifreId");
            var lblYanlis = document.getElementById("labelDegerKontrol");
            if (yeniSifre.value != yeniSifreTekrar.value ) {
                lblYanlis.style.color = "red";
                yeniSifre.style.borderColor = "red";
                yeniSifreTekrar.style.borderColor = "red";
                document.getElementById('labelDegerKontrol').innerHTML = "Girilen İki Şifre Aynı Değil.";
                document.getElementById('guncelleBtn').disabled = true;
            }
            else {
                document.getElementById('labelDegerKontrol').innerHTML = " ";
                yeniSifre.style.borderColor = "#2EFE2E";
                yeniSifreTekrar.style.borderColor = "#2EFE2E";
                document.getElementById('guncelleBtn').disabled = false;

            }
        }</script>

}





