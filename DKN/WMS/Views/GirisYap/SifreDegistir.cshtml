                    </div>

                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("SifreDegistir", "GirisYap", FormMethod.Post))
                    {
        @Html.AntiForgeryToken();
<div class="box-body">
    <div class="form-group">
