@model DKN.Models.KULLANICI
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Netdenet Giriş</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Scripts/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="icon" href="../../Content/adminlte/img/favicon.ico" type="image/x-icon">

    @*<link rel="stylesheet" type="text/css" href="~/Content/jquery.mytour.css" />*@

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/adminlte/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Scripts/adminlte/components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/adminlte/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Scripts/adminlte/plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <style>
        #bg {
            position: fixed;
            background: url(../../Content/adminlte/img/slider1.png) no-repeat center center fixed;
            background-size: cover;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
        }
        /*      #bg {
            background: url(../../Content/adminlte/img/slider1.png) no-repeat center center fixed;
            background-size: cover;
            height: 100%;
            width: 100%;
            overflow: hidden;
        }*/
    </style>
</head>
<body class="hold-transition login-page" id="bg">
    <h1>  @Html.Partial("_Message")</h1>
    <div class="login-box">

        <div class="login-logo">
            @*<a href="../../index2.html">*@
            <img src="../../Content/adminlte/img/dkn96x96.png">
            @* </a>*@
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <center><h3><b>Hesabınıza giriş yapın</b></h3></center>
            <center><h5>Hoşgeldiniz! Lütfen bilgilerinizi giriniz</h5></center>
            <br />
            @using (Html.BeginForm("Index", "GirisYap", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    @*<input type="email" name="EMAIL" class="form-control" placeholder="Email">*@
                    @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.EMAIL, "", new { @class = "text-danger" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    @*<input type="password" name="SIFRE" class="form-control" placeholder="Şifre">*@
                    @Html.PasswordFor(m => m.SIFRE, new { @class = "form-control", @placeholder = "Şifre" })
                    @Html.ValidationMessageFor(m => m.SIFRE, "", new { @class = "text-danger" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <!-- /.col -->
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <button type="submit" style="font-size:large" class="btn btn-info btn-block fa fa-sign-in btn-lg"> Giriş</button>
                    </div>
                    <!-- /.col -->
                </div>
                <br />
                <br />
                <div class="box-footer">
                    <div class="row">
                        <div class="col-md-6 col-sm-5 col-xs-5">
                            <a href="#" id="sifremiUnuttum" style="font-size:small" data-toggle="modal" data-target="#modal-sifre">Şifremi Unuttum</a>

                        </div>
                        <div class="col-md-6  col-sm-7 col-xs-7">
                            Powered By <a href="https://www.sofistech.net/" target="_blank"> Ssss</a>
                        </div>
                    </div>
                </div>}
            @* <hr style="margin-top:-5px;" />*@
            <br />
            <br />
            <div class="row" style="margin-top:-10px;">
                <div class="col-md-2 col-sm-2 col-xs-1">

                </div>

                <div class="col-md-8 col-sm-8 col-xs-10">
                    Hesabınız yok mu? <a href="/GirisYap/HesapOlustur" id="sifremiUnuttum" style="font-size:small">Hesap Oluştur</a>
                </div>
                <div class="col-md-2 col-sm-2 col-xs-1">
                    @*<b> <i><label>Sürüm No:1.0.0</label></i></b>*@

                </div>

            </div>

        </div>
        <div class="modal fade" id="modal-sifre">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Şifremi Unuttum</h4>
                    </div>
                    @using (Html.BeginForm("SifremiUnuttum", "GirisYap", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <div class="form-group">
                                <input type="email" class="form-control" name="email" placeholder="Email adresinizi giriniz...">
                            </div>


                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-warning pull-left fa fa-close" data-dismiss="modal"> VAZGEÇ</button>
                            <button type="submit" id="btnOnay" class="btn btn-danger fa fa-send"> GÖNDER</button>
                        </div>}
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </div>




    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/adminlte/plugins/iCheck/icheck.min.js"></script>

    @*<script src="~/Scripts/adminlte/components/mytour/jquery.mytour.1.0.7.min.js"></script>*@

    <script type="text/javascript">
        $(document).ready(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });

            // yanlış giriş yapıldığında hata mesajının ekranda belli bir süre kalması için kullanılır
            //setTimeout(function () {
            //    $("#alert_div").fadeTo(2000, 500).slideUp(500, function () {
            //        $("#alert_div").remove();
            //    });
            //}, 5000);//3000=3

    </script>

</body>
</html>
