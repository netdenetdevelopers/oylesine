@model IEnumerable<DKN.Models.KONTOR_HAREKET>

@{ ViewBag.Title = "Kontör Hareket Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @Html.Partial("_Message")
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="margin-top:10px;">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <h4><b>KONTÖR HAREKET LİSTESİ</b></h4>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6 col-md-push-4">
                                <label>
                                    <a href="/Kullanici/KontorSatinAl" class="btn btn-success pull-left btn-flat fa fa-plus"> Kontör</a>
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="">
                        <table id="kontorTbl" class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width:30px">S.NO</th>
                                    <th>AÇIKLAMA</th>
                                    <th>KONTOR</th>
                                    <th>İŞLEM TİPİ</th>
                                    <th>İŞLEM TARİHİ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int RowNo = 0;}
                                @foreach (var item in Model.OrderByDescending(m=>m.ISLEM_TARIHI))
                                {
                               
                    <tr>
                        <td style=""> @{RowNo++;} @RowNo</td>
                        <td> @Html.DisplayFor(modelItem => item.ISLEM_ACIKLAMA)</td>
                        <td> @Html.DisplayFor(modelItem => item.KONTOR_MIKTARI)</td>
                        <td> @Html.DisplayFor(modelItem => item.tipAciklama)</td>
                        <td> @Html.DisplayFor(modelItem => item.ISLEM_TARIHI)</td>

                    </tr>}

                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>
<!-- /.content-wrapper -->
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#kontorTbl').DataTable({
                "scrollX": true
            });
        });

    </script>

}
