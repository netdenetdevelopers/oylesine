@model DKN.Models.KULLANICI
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Netdenet Hesap Oluştur</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Scripts/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/adminlte/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Scripts/adminlte/components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/adminlte/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Scripts/adminlte/plugins/iCheck/square/blue.css">
    <link rel="icon" href="../../Content/adminlte/img/favicon.ico" type="image/x-icon">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>
        #bg {
            position: fixed;
            background: url(../../Content/adminlte/img/slider1.png) no-repeat center center fixed;
            background-size: cover;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
        }
    </style>

</head>
@*<body class="hold-transition login-page" id="bg" style=" background: url(../../Content/adminlte/img/slider1.png) no-repeat center center fixed;">*@
<body class="hold-transition login-page" id="bg">
    <div class="login-box">
        <h1>  @Html.Partial("_Message")</h1> @*uyarımesajı için tanımlanan partial*@
        <div class="login-logo" style="margin-top:-30px; margin-bottom:5px;" >
            <a href="/GirisYap/Index">
                <img style="width:50px; height:50px;" src="../../Content/adminlte/img/dkn96x96.png">
             </a>
        </div>
    <div class="login-box-body">
    
        <center><h3 style="margin-top:5px;"><b>Kayıt Ol</b></h3></center>
        <center><h5 style="color:green">250 TL değerinde</h5></center>
        <center><h5 style="color:green">İlk 5 Kontör Ücretsiz</h5></center>

        @using (Html.BeginForm("HesapOlustur", "GirisYap", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.AD, new { @class = "form-control", @placeholder = "Ad" })
                @Html.ValidationMessageFor(m => m.AD, "", new { @class = "text-danger" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.SOYAD, new { @class = "form-control", @placeholder = "Soyad" })
                @Html.ValidationMessageFor(m => m.SOYAD, "", new { @class = "text-danger" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="form-group has-feedback">
                @*<input type="email" name="EMAIL" class="form-control" placeholder="Email">*@
                @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control", @placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.EMAIL, "", new { @class = "text-danger" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.TELEFON, new { @class = "form-control", @maxlength = "10", @placeholder = "Telefon (Başında '0' olmadan giriniz.)" })
                @Html.ValidationMessageFor(m => m.TELEFON, "", new { @class = "text-danger" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="glyphicon glyphicon-phone form-control-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="form-group has-feedback">
                @*<input type="password" name="SIFRE" class="form-control" placeholder="Şifre">*@
                @Html.PasswordFor(m => m.SIFRE, new { @class = "form-control", @placeholder = "Şifre" })
                @Html.ValidationMessageFor(m => m.SIFRE, "", new { @class = "text-danger" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.HESAP_TURU, new SelectList(Model.turList, "Value", "Text"), new { @class = "form-control select-add-placeholder" })
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <button type="submit" style="font-size:large" class="btn btn-success btn-block fa fa-user-plus btn-lg"> Hesap Oluştur</button>
                </div>
                <!-- /.col -->
            </div>
            <div class="box-footer">
                <div class="row">
                    <div class="col-md-2 col-sm-2 col-xs-1">

                    </div>

                    <div class="col-md-8 col-sm-8 col-xs-10">
                        Hesabınız var mı? <a href="/GirisYap/Index" style="font-size:small">Giriş Yap</a>
                    </div>
                    <div class="col-md-2 col-sm-2 col-xs-1">
                        @*<b> <i><label>Sürüm No:1.0.0</label></i></b>*@

                    </div>
                </div>
            </div>}
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-5">
                <span class="pull-left" style="font-size:small">© Netdenet 2022</span>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-7">
                <a href="mailto:destek@netdenet.com.tr" class="pull-right fa fa-envelope" style="font-size:small">  destek@netdenet.com.tr</a>
            </div>

        </div>
    </div>

    </div>

    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/adminlte/plugins/iCheck/icheck.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
        $(".select-add-placeholder").prepend("<option value='' disabled selected>Hesap Türü</option>");

    </script>
</body>

</html>



