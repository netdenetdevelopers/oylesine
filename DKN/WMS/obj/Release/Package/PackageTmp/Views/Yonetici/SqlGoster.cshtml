@model DKN.Models.DENETIM_KURALLARI

@{
    ViewBag.Title = "Sql";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @Html.Partial("_Message")
        </h1>

        <ol class="breadcrumb">
            <li><a href="/Home/HomeIndex"><i class="fa fa-dashboard"></i> Menü</a></li>
            <li><a href="/Home/HomeIndex">Yönetici</a></li>
            <li><a href="/Yonetici/KuralListesi">Kural Listesi</a></li>
            <li class="active">Sql Güncellem</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="margin-top:10px;">
            <div class="col-md-12 col-sm-12 col-xs-12">
              
                @using (Html.BeginForm("KaydetGuncelleSql", "Yonetici", FormMethod.Post))
                {
                
                <div class="box box-primary">
                    @Html.TextBoxFor(m => m.LOGICALREF, new { @class = "form-control, hidden" })
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.SQL_IFADE, new { @class = "form-control", @rows = 25 })
                    </div>
                </div>
                <div class="box-footer">
                    <div class="col-md-1 col-sm-1 col-xs-1">
                        <a href="/Yonetici/KuralListesi/" class="btn btn btn-warning fa fa-close"> Vazgeç</a>
                    </div>
                    <div class="col-md-10 col-sm-10 col-xs-10">
                    </div>
                    <div class="col-md-1 col-sm-1 col-xs-1">
                        <button type="submit" class="btn btn-danger fa fa-plus"> Kaydet</button>
                    </div>
                </div>
                }
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

</div>
<!-- /.content-wrapper -->



@section Scripts
{

}


