@model DKN.Models.KONTOR

@{ ViewBag.Title = "Kontör Güncelle";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>  @Html.Partial("_Message")</h1>
        <ol class="breadcrumb">
            <li><a href="/Home/HomeIndex"><i class="fa fa-dashboard"></i> Menü</a></li>
            <li><a href="/Home/HomeIndex">Yönetici</a></li>
            <li><a href="/Yonetici/KontorIslemleri">Kontor Listesi</a></li>
            <li class="active">Kontör Güncelleme</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6 col-md-offset-2">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title fa fa-user-circle-o"><b>Kontör Güncelleme</b></h3>
                    </div>
                    @using (Html.BeginForm("EditKontor", "Yonetici", FormMethod.Post))
                    {
                         @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group">
                        <label>Adet</label>
                        @Html.TextBoxFor(m => m.KONTOR_ADET, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.KONTOR_ADET, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Paket Fiyatı</label>
                        @Html.TextBoxFor(m => m.PAKET_FIYATI, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PAKET_FIYATI, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Birim Fiyatı</label>
                        @Html.TextBoxFor(m => m.BIRIM_FIYATI, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BIRIM_FIYATI, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>İndirim Oranı</label>
                        @Html.TextBoxFor(m => m.INDIRIM_ORANI, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.INDIRIM_ORANI, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextBoxFor(m => m.ACIKLAMA, new { @class = "form-control", @maxlength = "145" })
                        @Html.ValidationMessageFor(m => m.ACIKLAMA, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <div class="row" style="margin:5px">
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-6 col-xs-6 pull-left">
                                    <label class="pull-left"> Kullanım Durumu&nbsp; </label>
                                    @Html.CheckBoxFor(model => model.kullanimDurumuBool, new { @class = "icheck-primary, pull-left", @id = "kullanimDurumu" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- /.box-body -->
                                                        <div class="box-footer">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <button type="submit" class="btn btn-primary pull-left fa fa-edit"> Güncelle </button>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <a href="/Yonetici/KontorIslemleri" class="btn btn-warning pull-right fa fa-reply"> Kontör Listesine Dön</a>
                                                                </div>
                                                            </div>

                                                        </div>}
                </div>

            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
