@model DKN.Models.KullaniciFirma
@using MvcCheckBoxList.Model

@{ ViewBag.Title = "Kullanıcı Firma Ata";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @Html.Partial("_Message")
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Menü</a></li>
            <li><a href="#">Yönetici</a></li>
            <li class="active">Kullanıcı Firma Atama</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6 col-md-offset-3">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title fa fa-user-circle-o"><b>Kullanıcı Firma Atama</b></h3>
                    </div>

                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("KullaniciFirmaAta", "Yonetici", FormMethod.Post))
                    {
        @Html.AntiForgeryToken()
                        <div class="box-body">

                            @*<input type="hidden" name="LOGICALREF" value="@Model.kullanici.LOGICALREF" hidden="hidden" class="form-control">*@
                            @Html.TextBoxFor(m => m.kullanici.LOGICALREF, new { @class = "form-control, hidden", @readonly = "readonly", @hidden = "hidden" })

                            <div class="form-group">
                                <label for="email">Email adresi</label>
                                @*<input type="email" required name="EMAIL" class="form-control" id="email" placeholder="Email">*@
                                @Html.TextBoxFor(m => m.kullanici.EMAIL, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.kullanici.EMAIL, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="ad">Ad</label>
                                @* <input type="text" name="AD" class="form-control" id="ad" placeholder="Ad">*@
                                @Html.TextBoxFor(m => m.kullanici.AD, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.kullanici.AD, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="ad">Soyad</label>
                                @* <input type="text" name="SOYAD" class="form-control" id="ad" placeholder="Soyad">*@
                                @Html.TextBoxFor(m => m.kullanici.SOYAD, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.kullanici.SOYAD, "", new { @class = "text-danger" })
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <span class="badge bg-light-blue">Kullanıcı Firmaları/Firmalar</span>
                                    <hr style="margin-top:5px; margin-bottom:5px;" />
                                    <div class="form-group">

                                        @Html.CheckBoxListFor(model => model.postedIds.firmaIds,
                                             model => model.kullaniciFirmaList,
                                             model => model.LOGICALREF,
                                             model => model.UNVAN,
                                             model => model.selectedKullaniciFirmaList,
                                             Position.Vertical)

                                    </div>
                                </div>
                            </div>
                        </div> <!-- /.box-body -->
                                                        <div class="box-footer">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <button type="submit" class="btn btn-primary pull-left fa fa-save"> Kaydet </button>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <a href="/Yonetici/KullaniciList" class="btn btn-primary pull-right fa fa-share"> Kullanıcı Listesine Dön</a>

                                                                </div>
                                                            </div>

                                                        </div>}
                </div>

            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
@section Scripts
{
    <script>$(document).ready(function () {
            //Initialize Select2 Elements
            $('.select2').select2()

        })</script>
}



