@model DKN.Models.FIRMA

@{ ViewBag.Title = "Firma Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1> @Html.Partial("_Message")</h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6 col-md-offset-3">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title fa fa-plus-circle"><b> Firma</b></h3>
                    </div>

                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("CreateFirma", "Kullanici", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <div class="form-group">
                                <label for="email">VKN/TCKN</label>
                                @Html.TextBoxFor(m => m.VKNTCKN, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.VKNTCKN, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="ad">UNVAN</label>
                                @Html.TextBoxFor(m => m.UNVAN, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UNVAN, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label for="resimInpt" id="rsmSec" class="btn btn-primary pull-left fa fa-user-plus"> Resim Seç</label>
                                <input type="file" id="resimInpt" accept="image/*" style="visibility:hidden;" name="uploadImages" class="input-files pull-left" />

                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label class="pull-left" id="fileName"></label>
                            </div>
                        </div> <!-- /.box-body -->
                                        <div class="box-footer">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <button type="submit" class="btn btn-primary pull-left fa fa-plus"> Kaydet </button>
                                                </div>
                                                <div class="col-md-6">
                                                    <a href="/Kullanici/IndexKullanici" class="btn btn-primary pull-right fa fa-reply"> Firma Listesine Dön</a>
                                                </div>
                                            </div>
                                        </div>}
                </div>

            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
